      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Crear">

    <Grid>
        <TextBox HorizontalAlignment="Left" Name="Apellido" Height="14" Margin="118,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="203" TextChanged="Apellido_TextChanged"/>
